
    <% for (let tweet of tweets) { %>
    <div class="card tweet-element">
        <div class="card-body d-flex flex-column">
          <div class="d-flex flex-row justify-content-center">
            <img src="<%=tweet.author.avatar%> " alt="author" width="30" height="30" class="pr-2" >
            <span class="flex-fill"><%=tweet.author.username%></span>
            <% if (editable && tweet.author._id.toString() === currentUser._id.toString())  { %> 
            <div class="d-flex flex-row justify-content-center">
              <a class="fas fa-edit pr-2 mr-2" href="/tweets/edit/<%= tweet._id %>"></a>
              <i class="fas fa-minus-circle text-danger pointer-cursor" tweetid=<%= tweet._id %>></i>
            </div>
          <% } %> 
          </div>
          <div>
            <%= tweet.content %> 
          </div>
      </div>
      <% } %>
    </div>
  