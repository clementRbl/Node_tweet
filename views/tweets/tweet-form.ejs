<%- include('../layout.ejs') -%>
<% if(tweet.id) { %>
     <h1 class="tweet-modified">Modifier le tweet</h1> 
<% } %>     
<div class="d-flex flex-row content mx-auto">
  
     <!--  <-%include('../includes/profile.ejs') BUG affichage ne fonctionne pas tweets no defined -%> -->
  
  <div class="flex-fill">
    <form action=<%=tweet._id ? "/tweets/update/" + tweet._id : "/tweets" %> method="post" class="card">
       <div class="card-header">Ecrire un tweet</div>
       <div class="card-body">
         <div class="form-group">
           <textarea name="content" class="form-control"  placeholder="what is happening ..."<%= tweet.content %> ></textarea>   
          </div>
         <div class="w-100">
           <input type="submit" value="Send" class="btn btn-primary ml-auto d-block">
         </div>
       </div>
    </form>
  </div>
</div>